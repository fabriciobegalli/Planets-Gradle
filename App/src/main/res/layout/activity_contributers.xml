<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.andrewq.planets.contributors.Contributors">

    <TextView
        android:id="@+id/michael"
        android:textSize="18sp"
        android:text="Michael Cook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lvLicense"
        android:textSize="14sp"
        android:layout_below="@+id/michael"
        android:text="Designed newest app icon and has provided useful design feedback."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp" />

    <TextView
        android:id="@+id/lDialogsTitle"
        android:layout_below="@+id/lvLicense"
        android:textSize="18sp"
        android:text="Delyn Wagenknecht"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lDialogsLicense"
        android:textSize="14sp"
        android:layout_below="@+id/lDialogsTitle"
        android:text="Rewrote entire content from scratch."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp" />

    <TextView
        android:id="@+id/lGoogleAnalytics"
        android:layout_below="@+id/lDialogsLicense"
        android:textSize="18sp"
        android:text="Mike Penz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lGoogleAnalyticsLicense"
        android:textSize="14sp"
        android:layout_below="@+id/lGoogleAnalytics"
        android:text="Helped incorporate a super easy-to-use library that brings more material design to the app."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp" />

</RelativeLayout>
