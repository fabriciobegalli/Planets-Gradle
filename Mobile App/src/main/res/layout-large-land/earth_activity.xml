<com.andrewq.planets.util.NotifyingScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view_4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_header_earth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/earth"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#D8D8D8">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/earthCard1"
                    android:background="@drawable/layer_card_background"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:padding="16dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/earth_sub_title_1"
                        android:paddingBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="false"
                        android:text="@string/earth_sub_title_1"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/earth_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/earth_sub_title_1"
                        android:layout_centerHorizontal="false"
                        android:text="@string/earth_description"
                        android:textSize="20sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/earthCard2"
                    android:background="@drawable/layer_card_background"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/earthCard1"
                    android:padding="16dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/earth_sub_title_2"
                        android:paddingBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="false"
                        android:text="@string/earth_sub_title_2"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/earth_description_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/earth_sub_title_2"
                        android:layout_centerHorizontal="false"
                        android:text="@string/earth_description_2"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/earth_satellite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/earth_description_2"
                        android:layout_centerHorizontal="true"
                        android:text="Moon (1)"/>
                </RelativeLayout>
            </RelativeLayout>
        </FrameLayout>

    </LinearLayout>

</com.andrewq.planets.util.NotifyingScrollView>