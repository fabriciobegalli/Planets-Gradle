<com.andrewq.planets.NotifyingScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view_6"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_header_mars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/mars"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#D8D8D8">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/marsCard1"
                    android:background="@drawable/layer_card_background"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:padding="16dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/mars_sub_title_1"
                        android:paddingBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="false"
                        android:text="@string/mars_sub_title_1"
                        android:textSize="29sp" />

                    <TextView
                        android:id="@+id/mars_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mars_sub_title_1"
                        android:layout_centerHorizontal="false"
                        android:text="@string/mars_description"
                        android:textSize="19sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/marsCard2"
                    android:background="@drawable/layer_card_background"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/marsCard1"
                    android:padding="16dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/mars_sub_title_2"
                        android:paddingBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="false"
                        android:text="@string/mars_sub_title_2"
                        android:textSize="29sp" />

                    <TextView
                        android:id="@+id/mars_description_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mars_sub_title_2"
                        android:layout_centerHorizontal="false"
                        android:text="@string/mars_description_2"
                        android:textSize="19sp" />

                    <Button
                        android:id="@+id/mars_satellite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mars_description_2"
                        android:layout_centerHorizontal="true"
                        android:text="Moons (2)"/>
                </RelativeLayout>
            </RelativeLayout>
        </FrameLayout>

    </LinearLayout>

</com.andrewq.planets.NotifyingScrollView>